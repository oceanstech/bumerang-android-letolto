<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:orientation="vertical">
    <FrameLayout android:id="@+id/frameLayout1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="top">
        <LinearLayout android:layout_height="wrap_content" android:orientation="vertical" android:id="@+id/linearLayout1" android:layout_width="fill_parent">
            <RelativeLayout android:background="@drawable/header_bg" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/relativeLayout1">
                <ImageButton android:background="#00000000" android:layout_height="wrap_content" android:src="@drawable/down_all" android:layout_alignParentRight="true" android:padding="0dip" android:id="@+id/imageButton1" android:layout_width="wrap_content" android:onClick="downThemAll"></ImageButton>
                <TextView android:shadowColor="#000000" android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/download_tab_header" android:fadingEdge="horizontal" android:shadowRadius="2" android:text="TextView" android:textColor="#FFFFFFFF" android:shadowDx="2" android:shadowDy="2" android:padding="3dp" android:gravity="right|center_vertical" android:layout_toLeftOf="@+id/imageButton1" android:layout_alignTop="@+id/imageButton1" android:layout_alignBottom="@+id/imageButton1" android:textSize="23dp"></TextView>
                <ImageView android:layout_height="wrap_content" android:id="@+id/imageView2" android:src="@drawable/vertical_separator" android:layout_width="wrap_content" android:layout_toLeftOf="@+id/imageButton1" android:layout_alignTop="@+id/imageButton1" android:layout_alignBottom="@+id/imageButton1"></ImageView>
            </RelativeLayout>
            <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <com.viewpagerindicator.TitlePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MyTitlepageIndicator" />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
</LinearLayout>
        </LinearLayout>
        <ImageView android:id="@+id/imageView1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/header" android:paddingTop="2dip"></ImageView>
    </FrameLayout>
</LinearLayout>
